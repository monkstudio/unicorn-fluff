---
title: Home
templateEngineOverride: njk,md
permalink: /
date: Last Modified

htmlClass: html
bodyClass: body
---

{# Caveat: indenting does not work normally with shortcodes so keep all content on same indent line.  #}
{% container %}
  {% column %}
  {% include "partials/shortcodes.njk" %}
  {% endcolumn %}

  {% column %}
  ## Page list
  <ul class="listing">
  {%- for page in collections.page |  sort(attribute='date') -%}
    <li>
      <a href="{{ page.url }}">{{ page.data.title }}</a> -
      <time datetime="{{ page.date }}">{{ page.date | formatDate("LLLL d, y") }}</time>
    </li>
  {%- endfor -%}
  </ul>

  ## Posts list
  <ul class="listing animate">
  {%- for page in collections.post |  sort(attribute='date') -%}
    <li>
      <a href="{{ page.url }}">{{ page.data.title }}</a> -
      <time datetime="{{ page.date }}">{{ page.date | formatDate("LLLL d, y") }}</time>
    </li>
  {%- endfor -%}
  </ul>

  <a href="{{ url }}">Last updated</a> - <time datetime="{{ page.date }}">{{ page.date  | formatDate("LLLL d, y, HH:mm") }}</time>

  {% endcolumn %}
{% endcontainer %}








