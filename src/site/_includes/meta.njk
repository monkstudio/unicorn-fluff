<title>{{ pageTitle }}</title>

<meta property="og:site_name" content="{{ site.url }}" />
<meta property="og:title" content="{{ site.title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ currentUrl }}" />

{% if site.author %}
  <meta name="twitter:creator" content="@{{ site.author.name | replace('@', '') }}" />
{% endif %}

{% if site.description %}
  <meta name="description" content="{{ site.description }}" />
  <meta name="twitter:description" content="{{ site.description }}" />
  <meta property="og:description" content="{{ site.description }}" />
{% endif %}

{% if site.socialimage %}  
  <meta property="og:image" content="{{ site.url }}{{ site.socialimage }}" />
  <meta name="twitter:image" content="{{ site.url }}{{ site.socialimage}}" />
  <meta property="og:image:alt" content="Page image for {{ site.title }}" />
  <meta name="twitter:image:alt" content="Page image for {{ site.title}}" />
{% endif %}