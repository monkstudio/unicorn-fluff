{# Open graph related #}
<meta property="og:title" content="{{ title or site.title }}" />
<meta property="og:type" content="{{ type or site.type }}" />
<meta property="og:url" content="{{ url or site.url }}" />
<meta property="og:image" content="{{ image or site.image }}" />
<meta property="og:site_name" content="{{ name or site.name }}" />
<meta property="og:description" content="{{ description or site.description }}" />

{% if site.author %}
  <meta name="twitter:creator" content="@{{ site.author.name | replace('@', '') }}" />
{% endif %}

{% if site.description %}
  <meta name="description" content="{{ site.description }}" />
  <meta name="twitter:description" content="{{ site.description }}" />
  <meta property="og:description" content="{{ site.description }}" />
{% endif %}

{% if site.socialimage %}
  <meta property="og:image" content="{{ site.url }}{{ site.image }}" />
  <meta name="twitter:image" content="{{ site.url }}{{ site.image}}" />
  <meta property="og:image:alt" content="Page image for {{ site.title }}" />
  <meta name="twitter:image:alt" content="Page image for {{ site.title}}" />
{% endif %}